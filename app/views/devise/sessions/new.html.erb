<% title "Log In" %>
<% main_header "" -%>
<% extra_button "" -%>
<% instructions "Welcome to the ARC Inbox, where you can submit metadata for NINES, 18thConnect and MESA. If you already have an account, log in below. Otherwise contact the #{main_editor_link}." -%>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div><%= f.label :email, { class: 'field-label' } %>
        <%= f.email_field :email, :autofocus => true %></div>

    <div><%= f.label :password, { class: 'field-label' } %>
        <%= f.password_field :password %></div>

    <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div><%= f.submit "Log in" %></div>
<% end %>

<%= render "devise/shared/links" %>

<% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
<% end %>
